{% extends "base.html" %}

{% block title %}Staff Management{% endblock %}

{% block content %}

<h1>Staff Listing</h1>

<table id="staffTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Capacity</th>
            <th>Note</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {% for person in staff %}
        <tr>
            <td>{{ person.staffID }}</td>
            <td>{{ person.staffName }}</td>
            <td>{{ person.staffEmail }}</td>
            <td>{{ person.staffCapacity }}</td>
            <td>{{ person.staffNote }}</td>
            <td>
                <button onclick="editStaff({{ person.staffID }})">Edit</button>
            </td>
            <td>
                <button onclick="deleteStaff({{ person.staffID }})">Delete</button>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<h2 id="add-staff">Add Staff</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Capacity</th>
            <th>Note</th>
            <th>Add</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><input type="text" id="addStaffName" name="staffName" required></td>
            <td><input type="email" id="addStaffEmail" name="staffEmail" required></td>
            <td>
                <select id="addStaffCapacity" name="staffCapacity" required>
                    <option value="Available">Available</option>
                    <option value="Not Available">Not Available</option>
                </select>
            </td>
            <td><input type="text" id="addStaffNote" name="staffNote"></td>
            <td><button type="submit">Add</button></td>
        </tr>
    </tbody>
</table>

{% endblock %}