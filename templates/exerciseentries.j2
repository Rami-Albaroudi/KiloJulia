        let exerciseName = cells[3].innerText;
        let exerciseType = cells[4].innerText;
        let calories = cells[5].innerText;
        let note = cells[6].innerText;

        cells[1].innerHTML = '<input type="date" value="' + trackedDayDate + '">';
        cells[2].innerHTML = '<input type="text" value="' + clientName + '">';
        cells[3].innerHTML = '<input type="text" value="' + exerciseName + '">';
        cells[4].innerHTML = `<select>
                            <option value="Cardio">Cardio</option>
