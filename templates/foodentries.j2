{% extends "template.j2" %}

{% block title %}Food Entries{% endblock %}

{% block content %}
<h3>Food Entries Listing</h3>

<table>
    <thead>
        <tr>
            <th>Food Entry ID</th>
            <th>Tracked Day Date</th>
            <th>Client Name</th>
            <th>Food Name</th>
            <th>Gram Weight</th>
            <th>Calories</th>
            <th>Note</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {% for foodentry in foodentries %}
        <tr id="foodentry-{{ foodentry.foodEntryID }}">
            <td>{{ foodentry.foodEntryID }}</td>
            <td>{{ foodentry.trackedDayDate }}</td>
            <td>{{ foodentry.clientName }}</td>
            <td>{{ foodentry.foodName }}</td>
            <td>{{ foodentry.foodEntryGramWeight }}</td>
            <td>{{ foodentry.foodEntryCalories }}</td>
            <td>{{ foodentry.foodEntryNote }}</td>
            <td>
                <button onclick="editFoodEntry({{ foodentry.foodEntryID }})">Edit</button>
            </td>
            <td>
                <button onclick="confirmDelete({{ foodentry.foodEntryID }})">Delete</button>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<h3>Add Food Entry</h3>
<form method="POST" action="/add_food_entry">
    <table>
        <thead>
            <tr>
                <th>Tracked Day Date</th>
                <th>Client Name</th>
                <th>Food Name</th>
                <th>Gram Weight</th>
                <th>Calories</th>
                <th>Note</th>
                <th>Add</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><input type="date" id="trackedDayDate" name="trackedDayDate" required></td>
                <td><input type="text" id="clientName" name="clientName" required></td>
                <td><input type="text" id="foodName" name="foodName" required></td>
                <td><input type="number" id="gramWeight" name="gramWeight" required></td>
                <td><input type="number" id="calories" name="calories" required></td>
                <td><input type="text" id="note" name="note"></td>
                <td colspan="5"><button type="submit">Add</button></td>
            </tr>
        </tbody>
    </table>
</form>

<script>
    function editFoodEntry(foodEntryID) {
        let row = document.getElementById('foodentry-' + foodEntryID);
        let cells = row.getElementsByTagName('td');

        let trackedDayDate = cells[1].innerText;
        let clientName = cells[2].innerText;
        let foodName = cells[3].innerText;
        let gramWeight = cells[4].innerText;
        let calories = cells[5].innerText;
        let note = cells[6].innerText;

        cells[1].innerHTML = '<input type="date" value="' + trackedDayDate + '">';
        cells[2].innerHTML = '<input type="text" value="' + clientName + '">';
        cells[3].innerHTML = '<input type="text" value="' + foodName + '">';
        cells[4].innerHTML = '<input type="number" value="' + gramWeight + '">';
        cells[5].innerHTML = '<input type="number" value="' + calories + '">';
        cells[6].innerHTML = '<input type="text" value="' + note + '">';
        cells[7].innerHTML = '<button onclick="updateFoodEntry(' + foodEntryID + ')">Update</button>';
    }

    function updateFoodEntry(foodEntryID) {
        let row = document.getElementById('foodentry-' + foodEntryID);
        let cells = row.getElementsByTagName('td');

        // Get the updated values from the input fields
        let trackedDayDate = cells[1].getElementsByTagName('input')[0].value;
        let clientName = cells[2].getElementsByTagName('input')[0].value;
        let foodName = cells[3].getElementsByTagName('input')[0].value;
        let gramWeight = cells[4].getElementsByTagName('input')[0].value;
        let calories = cells[5].getElementsByTagName('input')[0].value;
        let note = cells[6].getElementsByTagName('input')[0].value;

        // Update the table cells with the new values
        cells[1].innerHTML = trackedDayDate;
        cells[2].innerHTML = clientName;
        cells[3].innerHTML = foodName;
        cells[4].innerHTML = gramWeight;
        cells[5].innerHTML = calories;
        cells[6].innerHTML = note;
